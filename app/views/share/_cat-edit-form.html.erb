
<div class="row">
  <div class="col s8 offset-s2 m6 offset-m3 l6 offset-l3">
      <%= form_for [:admin, @category] do |f| %>
          <div class="input-field">
             <%= f.text_field :name , class: 'validate'%>
             <%= f.label :name, "餐廳名稱", class: 'active' %>
          </div>
          <br/><br/>
      
          <span><button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
          </button></span>
          <span><%= link_to 'Back to dashboard' , admin_restaurants_path, class: 'btn waves-effect waves-light'%></span>  
      <% end %>
  </div>
</div>
